@{
    ViewData["Title"] = "Student Grades";
    Layout = "_StudentDevExtremeLayout";
}

<div class="page-title text-center">
    <h1>
        <i class="fas fa-graduation-cap text-primary"></i> My Grades
    </h1>
</div>

<div class="grades-container">
    <div id="gradesGrid" class="grades-grid"></div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/CoursesDetails/LoadStudentGrades',
                type: 'GET',
                success: function (grades) {
                    const gridContainer = $('#gradesGrid');

                    grades.forEach(grade => {
                        const courseCard = `
                            <div class="course-card">
                                <div class="course-header">
                                    <h4 class="course-name">
                                        <i class="fas fa-book-open text-primary"></i> ${grade.CourseName}
                                    </h4>
                                    <span class="course-grade">
                                        <i class="fas fa-star"></i> Grade: <strong>${grade.Grade}</strong>
                                    </span>
                                    <span class="course-total">
                                        <i class="fas fa-calculator"></i> Total: <strong>${grade.TotalMarksObtained}/${grade.TotalCourseMarks}</strong>
                                    </span>
                                </div>
                                <div class="exam-details">
                                    <h5><i class="fas fa-file-alt"></i> Exam Details</h5>
                                    <table>
                                        <thead>
                                            <tr>
                                                <th>Exam Name</th>
                                                <th>Exam Date</th>
                                                <th>Marks Obtained</th>
                                                <th>Total Marks</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            ${grade.ExamGrades.map(exam => `
                                                <tr>
                                                    <td>${exam.ExamName}</td>
                                                    <td>${new Date(exam.ExamDate).toLocaleDateString()}</td>
                                                    <td>${exam.MarksObtained}</td>
                                                    <td>${exam.ExamTotalMarks}</td>
                                                </tr>
                                            `).join('')}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        `;
                        gridContainer.append(courseCard);
                    });
                },
                error: function () {
                    DevExpress.ui.notify("Failed to load grades. Please try again.", "error", 3000);
                }
            });
        });
    </script>
}

<style>
    /* General Page Styles */
    .grades-container {
        padding: 15px;
    }

    .grades-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 15px;
    }

    /* Modern Course Card */
    .course-card {
        background: linear-gradient(145deg, #f0f0f0, #ffffff);
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        padding: 20px;
        animation: fadeIn 0.5s ease;
        transform: scale(1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .course-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .course-header {
        text-align: center;
        padding-bottom: 10px;
        margin-bottom: 15px;
        border-bottom: 1px solid #ddd;
    }

        .course-header h4 {
            font-size: 18px;
            font-weight: bold;
            margin: 0;
            color: #333;
        }

    .course-grade,
    .course-total {
        display: block;
        font-size: 14px;
        margin-top: 5px;
        color: #555;
    }

        .course-grade strong,
        .course-total strong {
            font-size: 16px;
            color: #007bff;
        }

    /* Exam Details Table */
    .exam-details h5 {
        font-size: 16px;
        margin-bottom: 10px;
        color: #007bff;
        text-align: left;
    }

    .exam-details table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    .exam-details th,
    .exam-details td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
        font-size: 14px;
    }

    .exam-details th {
        background: #007bff;
        color: #fff;
        font-weight: bold;
    }

    .exam-details tr:nth-child(even) {
        background: #f9f9f9;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .grades-grid

    {
        grid-template-columns: repeat(auto-fit, minmax(100%, 1fr));
    }

    }

    /* Animations */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
