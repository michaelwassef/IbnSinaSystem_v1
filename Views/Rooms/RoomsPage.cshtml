@{
    ViewData["Title"] = "Rooms";
    Layout = "_DevExtremeLayout";
}

<div class="page-title">
    <h1>
        <i class="fas fa-door-open"></i>
        Rooms
    </h1>
</div>

<div id="gridContainer"></div>

<script>
    $(function () {
        $("#gridContainer").dxDataGrid({
            dataSource: DevExpress.data.AspNet.createStore({
                key: "rooms_ID",
                loadUrl: "/Rooms/LoadRooms",
                insertUrl: "/Rooms/AddRoom",
                updateUrl: "/Rooms/UpdateRoom",
                deleteUrl: "/Rooms/DeleteRoom"
            }),
            keyExpr: "rooms_ID",
            selection: {
                mode: "multiple"
            },
            export: {
                enabled: true,
                allowExportSelectedData: true
            },
            onExporting: exporting,
            allowColumnResizing: true,
            columnAutoWidth: true,
            editing: {
                mode: "popup",
                allowAdding: true,
                allowUpdating: true,
                allowDeleting: true,
                popup: {
                    showTitle: true,
                    title: "Room Details",
                    resizeEnabled: true,
                    width: 700
                }
            },
            rtlEnabled: true,
            searchPanel: {
                visible: true,
                highlightCaseSensitive: true
            },
            groupPanel: {
                visible: false
            },
            rowAlternationEnabled: true,
            width: "100%",
            height: 600,
            scrolling: {
                mode: "standard",
                useNative: false
            },
            paging: {
                pageSize: 100
            },
            showBorders: true,
            showColumnLines: true,
            columns: [
                {
                    dataField: "rooms_ID",
                    caption: "Room ID",
                    allowEditing: false,
                },
                {
                    dataField: "room_Name",
                    caption: "Room Name"
                },
                {
                    dataField: "room_Capacity",
                    caption: "Room Capacity",
                    dataType: "number"
                }
            ],
            columnFixing: {
                enabled: true
            },
            headerFilter: {
                visible: true
            },
            summary: {
                totalItems: [
                    {
                        column: "rooms_ID",
                        summaryType: "count",
                        displayFormat: "Total Rooms: {0}"
                    }
                ]
            },
            onContextMenuPreparing: onContextMenuPreparing
        });

        function exporting(e) {
            var workbook = new ExcelJS.Workbook();
            var worksheet = workbook.addWorksheet('Rooms');

            DevExpress.excelExporter.exportDataGrid({
                component: e.component,
                worksheet: worksheet,
                autoFilterEnabled: true
            }).then(function () {
                workbook.xlsx.writeBuffer().then(function (buffer) {
                    saveAs(new Blob([buffer], { type: 'application/octet-stream' }), 'Rooms.xlsx');
                });
            });
        }

        function onContextMenuPreparing(e) {
            if (e.row && e.row.rowType === "totalFooter") {
                e.items = e.items || [];

                e.items.push(
                    {
                        text: "Sum",
                        onItemClick: function () {
                            setSummaryType(e.column.dataField, "sum");
                        }
                    },
                    {
                        text: "Count",
                        onItemClick: function () {
                            setSummaryType(e.column.dataField, "count");
                        }
                    },
                    {
                        text: "Min",
                        onItemClick: function () {
                            setSummaryType(e.column.dataField, "min");
                        }
                    },
                    {
                        text: "Max",
                        onItemClick: function () {
                            setSummaryType(e.column.dataField, "max");
                        }
                    }
                );
            }
        }

        function setSummaryType(column, summaryType) {
            var dataGrid = $("#gridContainer").dxDataGrid("instance");

            var summaryItems = dataGrid.option("summary.totalItems") || [];
            var summaryExists = false;

            summaryItems.forEach(function (item) {
                if (item.column === column) {
                    item.summaryType = summaryType;
                    summaryExists = true;
                }
            });

            if (!summaryExists) {
                summaryItems.push({ column: column, summaryType: summaryType });
            }

            dataGrid.option("summary.totalItems", summaryItems);
            dataGrid.refresh();
        }
    });
</script>